<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/imageVi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/logo"
        >
    </RelativeLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageVi">
        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

             <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                        android:id="@+id/ima"
                        >
                            <RelativeLayout
                            android:id="@+id/imageVie"
                            android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/isim"
                        >
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:layout_below="@+id/imageVie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="390dp"
                                android:layout_height="300dp"
                                android:id="@+id/imageView2"
                                android:layout_gravity="right"
                                android:layout_toRightOf="@+id/imageView"
                                android:background="@drawable/birinci" />
                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="300dp"
                        android:id="@+id/imageView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/birinci" />
                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView3"
                        android:layout_below="@+id/imageView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/vote" />
                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView4"
                        android:background="@drawable/vote"
                        android:layout_below="@+id/imageView2"
                        android:layout_toRightOf="@+id/imageView3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:layout_marginLeft="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merhaba  arkadaşlar sizce hangisini profil resmı yapmalıyım"
                        android:id="@+id/textView2"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_below="@+id/imageView3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
                </HorizontalScrollView>
                 </RelativeLayout>
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_below="@+id/ima"
                               >
                               <RelativeLayout
                                   android:id="@+id/imageVier"
                                   android:layout_width="match_parent"
                                   android:layout_height="70dp"
                                   android:background="@drawable/isim"
                                   >
                               </RelativeLayout>
                               <HorizontalScrollView
                                   android:layout_below="@+id/imageVier"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <RelativeLayout
                     android:layout_width="match_parent"
                                       android:layout_height="match_parent">
                                       <ImageView
                                           android:layout_width="390dp"
                                           android:layout_height="300dp"
                                           android:id="@+id/imageView2r"
                                           android:layout_gravity="right"
                                           android:layout_toRightOf="@+id/imageViewr"
                                           android:background="@drawable/birinci" />
                                       <ImageView
                                           android:layout_width="390dp"
                                           android:layout_height="300dp"
                                           android:id="@+id/imageViewr"
                                           android:layout_alignParentTop="true"
                                           android:layout_alignParentLeft="true"
                                           android:layout_alignParentStart="true"
                                           android:background="@drawable/birinci" />
                                       <ImageView
                                           android:layout_width="390dp"
                                           android:layout_height="50dp"
                              android:id="@+id/imageView3r"
                                           android:layout_below="@+id/imageView2r"
                                           android:layout_alignParentLeft="true"
                                           android:layout_alignParentStart="true"
                                           android:background="@drawable/vote" />
                                       <ImageView
                                           android:layout_width="390dp"
                                           android:layout_height="50dp"
                                           android:id="@+id/imageView4r"
                                           android:background="@drawable/vote"
                                           android:layout_below="@+id/imageView2r"
                                           android:layout_toRightOf="@+id/imageView3r"
                                android:layout_toEndOf="@+id/imageView3r"
                                           android:layout_marginLeft="2dp" />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Merhaba  arkadaşlar sizce hangisini profil resmı yapmalıyım"
                                           android:id="@+id/textView2r"
                                           android:textColor="#ff000000"
                                 android:textStyle="bold"
                                           android:textSize="20dp"
                                           android:layout_below="@+id/imageView3r"
                                           android:layout_alignParentLeft="true"
                                           android:layout_alignParentStart="true"
                                           android:layout_alignParentBottom="true" />
                                   </RelativeLayout>
                               </HorizontalScrollView>
                           </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>